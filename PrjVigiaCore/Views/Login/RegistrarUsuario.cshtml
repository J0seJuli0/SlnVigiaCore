@{
    ViewData["Title"] = "Registrar Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: url('/images/admin-bg.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .registro-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(8px);
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            max-width: 700px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            transition: transform 0.3s ease-in-out;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                transform: scale(1.05);
            }
    </style>
</head>
<body>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="registro-card">
            <h3 class="text-center fw-bold text-primary">Registro de Empleado</h3>
            <p class="text-muted text-center">Completa los datos para registrar un nuevo empleado</p>

            <form id="formRegistro">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Usuario</label>
                        <input type="text" class="form-control rounded-3" id="usuario" required>

                        <label class="form-label">Email</label>
                        <input type="email" class="form-control rounded-3" id="email" required>

                        <label class="form-label">Contraseña</label>
                        <input type="password" class="form-control rounded-3" id="contrasenia" required>

                        <label class="form-label">Rol</label>
                        <<input type="text" class="form-control rounded-3" id="idRol" required>

                        <label class="form-label">Nombres</label>
                        <input type="text" class="form-control rounded-3" id="nombres" required>

                        <label class="form-label">Apellido Paterno</label>
                        <input type="text" class="form-control rounded-3" id="apePat" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Apellido Materno</label>
                        <input type="text" class="form-control rounded-3" id="apeMat" required>
                    </div>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary rounded-pill">Registrar Empleado</button>
                </div>
            </form>

            <div id="mensaje" class="mt-3"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("formRegistro").addEventListener("submit", function (event) {
            event.preventDefault();

            let datos = {
                usuario: document.getElementById("usuario").value,
                email: document.getElementById("email").value,
                contrasenia: document.getElementById("contrasenia").value,
                idRol: document.getElementById("idRol").value,
                nombres: document.getElementById("nombres").value,
                apePat: document.getElementById("apePat").value,
                apeMat: document.getElementById("apeMat").value,
                fechaNac: document.getElementById("fechaNac").value,
                idDoc: document.getElementById("idDoc").value,
                nroDoc: document.getElementById("nroDoc").value,
                salario: document.getElementById("salario").value,
                fechaIng: document.getElementById("fechaIng").value
            };

            fetch("/Login/RegistrarUsuario", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(datos)
            })
            .then(response => response.json())
            .then(data => {
                let mensajeDiv = document.getElementById("mensaje");
                if (data.success) {
                    mensajeDiv.innerHTML = `<div class="alert alert-success">${data.message}</div>`;
                    document.getElementById("formRegistro").reset();
                } else {
                    mensajeDiv.innerHTML = `<div class="alert alert-danger">${data.message}</div>`;
                }
            })
            .catch(error => console.error("Error:", error));
        });
    </script>

</body>
</html>
