<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Complexless</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PrjVigiaCore.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow-x: hidden;
        }

        .sidebar-wrapper {
            display: flex;
            height: 100vh;
        }

        .admin-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 275px;
            height: 100vh;
            background: rgba(50, 50, 50, 0.9);
            padding-top: 20px;
            color: white;
            overflow-y: auto;
            font-size: 18px;
            font-weight: bold;
            border-right: 2px solid rgba(255, 255, 255, 0.1);
            z-index: 100;
            transition: width 0.3s ease, opacity 0.3s ease;
        }

            .admin-sidebar.collapsed {
                width: 0;
                opacity: 0;
                pointer-events: none;
            }

            .admin-sidebar .list-group {
                padding-left: 0;
                margin-bottom: 0;
            }

            .admin-sidebar .list-group-item {
                background: rgba(255, 255, 255, 0.05);
                margin: 10px 15px;
                border-radius: 10px;
                border: 1px solid rgba(255, 255, 255, 0.2);
                padding: 15px 20px;
                color: white;
                transition: all 0.3s ease;
            }

                .admin-sidebar .list-group-item:hover {
                    background: rgba(200, 200, 200, 0.7);
                    color: black;
                }

                .admin-sidebar .list-group-item a {
                    text-decoration: none;
                    color: inherit;
                    display: block;
                }

                .admin-sidebar .list-group-item ul {
                    margin-top: 10px;
                    padding-left: 15px;
                }

                    .admin-sidebar .list-group-item ul li {
                        padding: 8px 0;
                        font-size: 16px;
                        font-weight: normal;
                    }

                        .admin-sidebar .list-group-item ul li a {
                            color: #ccc;
                            transition: color 0.2s ease;
                        }

                            .admin-sidebar .list-group-item ul li a:hover {
                                color: #ffcc00;
                            }

            .admin-sidebar::-webkit-scrollbar {
                width: 6px;
            }

            .admin-sidebar::-webkit-scrollbar-thumb {
                background-color: rgba(255, 255, 255, 0.2);
                border-radius: 4px;
            }

        .main-content {
            margin-left: 280px;
            width: 100%;
            overflow-y: auto;
            transition: margin-left 0.3s ease;
        }

            .main-content.collapsed {
                margin-left: 0;
            }

        .toggle-sidebar-btn {
            position: fixed;
            top: 20px;
            left: 278px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 10px;
            border-radius: 50%;
            font-size: 20px;
            cursor: pointer;
            z-index: 101;
        }
    </style>
</head>
<body>
    <div class="sidebar-wrapper">
        <div class="admin-sidebar" id="sidebarMenu"></div>

        <div class="main-content" id="mainContent">
            <main role="main" class="pb-3 container mt-4">
                @RenderBody()
            </main>

        </div>
    </div>

    <div class="toggle-sidebar-btn" id="toggleSidebar">
        <i class="bi bi-chevron-left"></i>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sidebar = document.getElementById("sidebarMenu");
            const mainContent = document.getElementById("mainContent");
            const toggleBtn = document.getElementById("toggleSidebar");

            fetch('/Menu/ObtenerMenus')
                .then(response => {
                    if (!response.ok) {
                        window.location.href = "../Login/UnAuthorized";
                        return;
                    }
                    return response.json();
                })
                .then(data => {
                    if (!data || !data.menus || data.menus.length === 0) {
                        console.warn("No hay menús disponibles.");
                        return;
                    }

                    let menus = data.menus;
                    let menuPadres = menus.filter(m => !m.idPadre);
                    let html = `<ul class="list-group list-group-flush">`;

                    menuPadres.forEach((menu, i) => {
                        let subMenus = menus.filter(sub => sub.idPadre === menu.idMenu);
                        let collapseId = `submenu-${i}`;

                        if (subMenus.length > 0) {
                            html += `
                                <li class="list-group-item">
                                    <a data-bs-toggle="collapse" href="#${collapseId}" role="button" aria-expanded="false" class="d-flex justify-content-between align-items-center fw-bold text-white">
                                        <span><i class="${menu.icono} me-2"></i>${menu.nombre}</span>
                                        <i class="bi bi-chevron-down"></i>
                                    </a>
                                    <ul class="collapse list-unstyled ps-4 mt-2" id="${collapseId}">
                            `;
                            subMenus.forEach(sub => {
                                const urlConId = sub.idCliente ? `${sub.url}?idCliente=${encodeURIComponent(sub.idCliente)}` : sub.url;
                                html += `<li><a href="${urlConId}" class="d-block text-white"><i class="${sub.icono} me-2"></i>${sub.nombre}</a></li>`;
                            });
                            html += `</ul></li>`;
                        } else {
                            const urlConId = menu.idCliente? `${menu.url}?idCliente=${encodeURIComponent(menu.idCliente)}` : menu.url;
                            html += `
                                <li class="list-group-item">
                                    <a href="${urlConId}" class="d-block fw-bold text-white"><i class="${menu.icono} me-2"></i>${menu.nombre}</a>
                                </li>`;
                        }
                    });

                    html += `</ul>`;
                    document.getElementById("sidebarMenu").innerHTML = html;
                })
                .catch(error => console.error("Error cargando menús:", error));

            toggleBtn.addEventListener('click', function() {
                sidebar.classList.toggle('collapsed');
                mainContent.classList.toggle('collapsed');

                const isCollapsed = sidebar.classList.contains('collapsed');
                toggleBtn.innerHTML = isCollapsed ? '<i class="bi bi-chevron-right"></i>' : '<i class="bi bi-chevron-left"></i>';
                toggleBtn.style.left = isCollapsed ? '20px' : '278px';
            });
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
